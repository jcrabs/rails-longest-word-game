<h1>New game</h1>
<ul class="letters">
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="longestWord" class="form-label">What is the longest word you can find?</label>
  <div class="d-flex align-items-center">
    <input type="text" name="answer" class="form-control">
    <button type="submit" class="btn btn-light">Play</button>
  </div>
</form>
